{
  "expo": {
    "name": "BetterSkin",
    "slug": "betterskin",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#08B5BF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
          "ios": {
        "supportsTablet": false,
        "bundleIdentifier": "com.berkcapar.betterskin",
        "buildNumber": "1",

        "infoPlist": {
          "NSCameraUsageDescription": "This app needs camera access to analyze your facial skin condition.",
        "NSMicrophoneUsageDescription": "Microphone access is not used by this app."
      }
    },
    "platforms": [
      "ios"
    ],
    "web": {},
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Face Analysis to access your camera to analyze skin condition."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "android": {
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.betterskin.app"
    }
  }
}
